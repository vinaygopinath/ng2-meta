{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "noLib": false,
    "inlineSources": true,
    "baseUrl": ".",
    "noEmitOnError": false,
    "rootDir": "./src",
    "lib": ["es6", "dom"]
  },
  "include": [
        "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
